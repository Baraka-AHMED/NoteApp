<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"

    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Titre de la note -->
        <TextView
            android:id="@+id/text_note_title"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Contenu de la note -->
        <TextView
            android:id="@+id/text_note_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/text_note_title"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="normal" />

        <!-- Date de dernière modification -->
        <TextView
            android:id="@+id/text_note_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_note_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp" />

        <!-- Poubelle en haut à droite -->
        <ImageView
            android:id="@+id/trash_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:contentDescription="Corbeille"
            android:src="@drawable/trash" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
